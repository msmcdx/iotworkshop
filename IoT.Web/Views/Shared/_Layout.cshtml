<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta content="[your meta keyword]" name="description">
    <link rel="shortcut icon" href="~/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top" id="top-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle"
                                data-toggle="collapse"
                                data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("IoT Workshop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse"
                         id="navbar">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Basic info", "Index", "Home")</li>
                            <li>
                                <a href="@Url.Action("Index", "Docs")">Docs</a>
                            </li>
                            <li><a href="@Url.Action("Index", "Download")">Downloads</a></li>
                            <li>@Html.ActionLink("About the project", "About", "Home")</li>
                            <li>@Html.ActionLink("Administration", "Index", "Home", new { area = "Admin" }, null)</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div> <!-- .col-md-12 -->
            </div> <!-- .row -->
        </div> <!-- .container -->
    </nav>
    <div class="container">
        <noscript>
            <div class="noscriptholder">
                <div class="alert alert-block alert-error fade in out">
                    You must enable JavaScript to be able to use this site in full.
                    <br />
                    Za delovanje spletne strani potrebujete imeti omogočen Javascript.
                </div>
            </div>
        </noscript>
        <div class="row">
            @if (TempData[ConstantHelper.PageMessageKey] != null)
            {
                <div class="alert alert-danger fade in alert-dismissable">
                    <button class="close" aria-hidden="true" type="button" data-dismiss="alert">×</button>
                    <strong>@TempData[ConstantHelper.PageMessageKey]</strong>
                </div>
            }
            @if (IsSectionDefined("breadcrumb"))
            {
                @RenderSection("breadcrumb")
            }
            <div class="clear"></div>
            @RenderBody()
        </div>
        <div class="clear"></div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>@DateTime.Now.Year - <a href="@Url.Content("~/")">IoT Workshop</a> &copy; - All data & pictures used for this site are publicly avaliable via Bing&trade; Search functionality. Design was improved by <a href="http://www.konda.eu" target="_BLANK">Jaka Konda</a>.</p>
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
