@model Device

@{
    var name = Model.Name;
    ViewBag.Title = "Iot Workshop >> Edit " + name;
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li><a href="@Url.Action("Devices","Home")">Devices</a></li>
        <li class="active">Edit @name</li>
    </ol>
}

<div class="col-md-12">
    <div class="page-header">
        Edit <b>@name</b>
    </div>
</div>
<div class="col-md-12">
    @using (Html.BeginForm("DeviceEdit", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    @Html.HiddenFor(d => d.DeviceId)
    <div class="form-group">
        <label for="Name" class="col-sm-2 control-label">Enter name</label>
        <div class="col-sm-10">
            <input type="text" id="Name" value="@Model.Name" placeholder="enter name of the device"
                   name="Name" />
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-2 control-label">Enter description</label>
        <div class="col-sm-10">
            <textarea rows="3"
                      id="Description"
                      placeholder="enter description of the device"
                      name="Description">@Model.Description</textarea>
        </div>
    </div>
    <div class="form-group">
        <label for="SN" class="col-sm-2 control-label">Enter serial number</label>
        <div class="col-sm-10">
            <input type="text" id="SN" value="@Model.SerialNumber"
                   placeholder="enter serial number of the device"
                   name="SerialNumber" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Confirm changes</button>
            &nbsp;
            <a href="@Url.Action("Devices")" class="btn btn-sm btn-default">Cancel</a>
        </div>
    </div>
    }
</div>
