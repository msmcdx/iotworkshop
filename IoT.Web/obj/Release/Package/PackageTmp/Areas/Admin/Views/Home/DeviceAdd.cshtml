@model Device

@{
    ViewBag.Title = "IotWorkshop >> Add device";
}

@section breadcrumb{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">Home</a></li>
        <li><a href="@Url.Action("Devices","Home")">Devices</a></li>
        <li class="active">Add a new device</li>
    </ol>
}

<div class="col-md-12">
    <div class="page-header">
        Add new device
        <small>
            it will be added to the choosen datastorage
        </small>
    </div>
</div>
<div class="col-md-12">
    @using (Html.BeginForm("DeviceAdd", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label for="Name" class="col-sm-2 control-label">Enter name</label>
            <div class="col-sm-10">
                <input type="text" id="Name" value="@Model.Name" placeholder="enter name of the device"
                       name="Name" />
            </div>
        </div>
        <div class="form-group">
            <label for="Description" class="col-sm-2 control-label">Enter description</label>
            <div class="col-sm-10">
                <textarea rows="3" 
                          id="Description" placeholder="enter description of the device"
                          name="Description">@Model.Description</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="SN" class="col-sm-2 control-label">Enter serial number</label>
            <div class="col-sm-10">
                <input type="text" id="SN" value="@Model.SerialNumber"
                       placeholder="enter serial number of the device"
                       name="SerialNumber" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
                &nbsp;
                <a href="@Url.Action("Devices")" class="btn btn-sm btn-default">Cancel</a>
            </div>
        </div>
    }
</div>
